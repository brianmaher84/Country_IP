{
  "manifest_version": 2,
    
  "name": "Country IP",
  "description": "This extension shows the country your current IP is in",
  "version": "1.0",
    
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
      "default_title": "Click for more IP details"
  },
  "background": {
    "scripts": ["jquery.min.js", "eventPage.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "alarms",
    "http://ip-api.com/json/*",
    "https://www.whatismyip.com/images/flags/*",
    "https://ajax.googleapis.com/",
    "https://maps.googleapis.com/maps/api/*"
  ]
}